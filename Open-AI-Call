<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual Agent</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        #chat {
            width: 300px;
            height: 400px;
            border: 1px solid #ccc;
            padding: 10px;
            overflow-y: scroll;
        }
        #input {
            width: 300px;
            padding: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Virtual Agent</h1>
    <div id="chat"></div>
    <input type="text" id="input" placeholder="Ask me anything...">

    <script>
        const chatDiv = document.getElementById("chat");
        const inputField = document.getElementById("input");

        // Replace with your OpenAI API key
        const OPENAI_API_KEY = "your-openai-api-key";

        inputField.addEventListener("keypress", async (e) => {
            if (e.key === "Enter") {
                const userInput = inputField.value;
                inputField.value = "";

                // Display user's message
                chatDiv.innerHTML += `<p><strong>You:</strong> ${userInput}</p>`;

                // Call OpenAI API directly from the browser
                try {
                    const response = await fetch("https://api.openai.com/v1/chat/completions", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": `Bearer ${OPENAI_API_KEY}`
                        },
                        body: JSON.stringify({
                            model: "gpt-3.5-turbo",
                            messages: [{ role: "user", content: userInput }]
                        })
                    });

                    const data = await response.json();
                    const botResponse = data.choices[0].message.content;

                    // Display agent's response
                    chatDiv.innerHTML += `<p><strong>Agent:</strong> ${botResponse}</p>`;
                    chatDiv.scrollTop = chatDiv.scrollHeight; // Auto-scroll
                } catch (error) {
                    console.error("Error calling OpenAI API:", error);
                    chatDiv.innerHTML += `<p><strong>Error:</strong> Unable to get a response.</p>`;
                }
            }
        });
    </script>
</body>
</html>
